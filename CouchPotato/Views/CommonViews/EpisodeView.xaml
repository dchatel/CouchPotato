<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CouchPotato.Converters"
    xmlns:db="clr-namespace:CouchPotato.DbModel"
    xmlns:e="clr-namespace:CouchPotato.Extensions">

    <DataTemplate DataType="{x:Type db:Episode}">
        <Border
            MinHeight="400"
            MaxWidth="800"
            MaxHeight="600"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource MaterialDesignCardBackground}"
            CornerRadius="40,0,0,0">
            <Grid>
                <FlowDocumentScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <FlowDocument>
                        <Paragraph>
                            <Floater
                                Width="300"
                                Margin="5,0"
                                HorizontalAlignment="Left">
                                <BlockUIContainer>
                                    <Image Source="{Binding ImageUrl, Converter={c:ImageConverter}}">
                                        <Image.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="0" />
                                        </Image.Effect>
                                    </Image>
                                </BlockUIContainer>
                            </Floater>
                            <Run FontFamily="{DynamicResource MaterialDesignFont}" Text="{Binding Overview}" />
                        </Paragraph>
                    </FlowDocument>
                </FlowDocumentScrollViewer>
                <TextBlock
                    MaxWidth="350"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    TextAlignment="Center"
                    TextWrapping="Wrap">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="5" />
                    </TextBlock.Effect>
                    <Run
                        FontSize="32"
                        FontWeight="ExtraBold"
                        Foreground="Red"
                        Text="{Binding EpisodeNumber,
                                       StringFormat='Episode {0}'}" />
                    <LineBreak />
                    <Run
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding Name}" />
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="-15" />
                            <TranslateTransform X="-50" Y="50" />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="EpisodeViewCompact" DataType="{x:Type db:Episode}">
        <Border
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource MaterialDesignCardBackground}"
            CornerRadius="40,0,0,0">
            <Grid e:Grid.Cols="35,*" e:Grid.Rows="150,auto,*">
                <TextBlock
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding EpisodeNumber,
                                   StringFormat='Episode {0}'}"
                    TextAlignment="Center">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <Border
                    Grid.Column="1"
                    Margin="0,5,5,5"
                    CornerRadius="5">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ImageUrl, Converter={c:ImageConverter}}" Stretch="Uniform" />
                    </Border.Background>
                </Border>
                <TextBlock
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    FontWeight="Bold"
                    Text="{Binding Name}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="overview"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    MinWidth="250"
                    MinHeight="200"
                    MaxWidth="800"
                    Margin="15,5"
                    Text="{Binding Overview}"
                    TextAlignment="Justify"
                    TextTrimming="WordEllipsis"
                    TextWrapping="Wrap" />
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>